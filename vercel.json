{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "VITE_SUPABASE_URL": "@supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "VITE_WEBHOOK_SECRET": "@webhook_secret",
    "VITE_WOOCOMMERCE_BASE_URL": "@woocommerce_base_url",
    "VITE_WOOCOMMERCE_CONSUMER_KEY": "@woocommerce_consumer_key",
    "VITE_WOOCOMMERCE_CONSUMER_SECRET": "@woocommerce_consumer_secret"
  }
}